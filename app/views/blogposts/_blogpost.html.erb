<li id="blogpost-<%= blogpost.id %>">
  <span class="title"><%= blogpost.title %></span>
  <span class="member"><%= link_to blogpost.member.name, blogpost.member %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(blogpost.created_at) %> ago
  </span>
  <% if current_member?(blogpost.member) %>
      <%= link_to "delete", blogpost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  <span class="content">
    <%= blogpost.content %>
    <%= image_tag blogpost.picture.url if blogpost.picture? %>
  </span>
</li>
