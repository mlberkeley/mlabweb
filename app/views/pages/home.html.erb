<!-- About Section -->
<div id="t-about">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="about-text">
          <div class="section-title">
            <h4>About us</h4>
            <h2>Learn. <strong>Connect.</strong> Grow.</h2>
            <hr>
            <div class="clearfix"></div>
          </div>
          <ul class="about-list">
            <li>
                <span class="fa fa-dot-circle-o"></span>
                <strong>Events</strong> - <em>We organize events centered around Machine Learning and Data Science that are open to all.</em>
            </li>
            <li>
                <span class="fa fa-dot-circle-o"></span>
                <strong>Resources</strong> - <em>We provide an inclusive community to support professional and academic development.</em>
            </li>
