<% provide(:title, "Subscribe") %>

<h1>Follow  our  <strong>Blog</strong> / <strong>Events</strong> / <strong>Newsletter</strong></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subscriber, url: subscribe_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Subscribe", class: "btn btn-mlab" %>
    <% end %>
  </div>
</div>
