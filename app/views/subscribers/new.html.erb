<% @title = "Subscribe to ML@B" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= form_for(@subscriber, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.form_group :name do |f| %>
            <%= f.label :name, class: 'control-label col-md-2' %>
            <div class='col-md-8'>
              <%= f.text_field :name, class: 'form-control' %>
              <%= f.error_messages %>
            </div>
          <% end %>

          <%= f.form_group :email do |f| %>
            <%= f.label :email, class: 'control-label col-md-2' %>
            <div class='col-md-8'>
              <%= f.text_field :email, class: 'form-control' %>
              <%= f.error_messages %>
            </div>
          <% end %>

        </div>

        <div class="form-actions col-md-offset-2 col-md-10">
          <%= f.submit "Subscribe", class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
