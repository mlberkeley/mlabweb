<div class="navbar">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "ML@B", root_path, class: "navbar-brand" %>
  </div>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right">
      <li class="active">
        <%= link_to "Home", home_path %>
      </li>
      <li>
        <%= link_to "Us", about_path %>
      </li>
      <li>
        <%= link_to "Portfolio", portfolio_path %>
      </li>
      <li>
        <%= link_to "Calendar", public_calendar_path %>
      </li>
      <li>
        <%= link_to "Updates", events_path %>
      </li>
      <li>
        <a href="//ml.berkeley.edu/blog" target="_blank" rel="noopener">Blog</a> <br>
      </li>
      <% if member_signed_in? %>
        <li class="navbar-text">
          <p>
            <%= fa_icon_tag "user" %> Welcome, <strong><%= (current_member.fname) ? current_member.fname : current_member.email %></strong>
            <span class="divider">| </span>
            <%= link_to "My ML@B", current_member %>
            <span class="divider">| </span>
            <%= link_to "Wiki", wikifiles_path %>
            <% if exec_or_higher? %>
              <span class="divider">| </span>
              <%= link_to "Administration", administration_path %>
            <% else %>
              <span class="divider">| </span>
              <%= link_to "Dashboard", dashboard_path %>
            <% end %>
          </p>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", new_member_session_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
