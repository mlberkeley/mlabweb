<% content_for :body_class, "landing" %>

<section>
  <div id="m-home" class="text-center">
    <div class="overlay">
      <div class="container">
        <div class="col-lg-12 col-xs-12">
          <div class="text text-center">
            <%= image_tag("color.png", alt: "ML@B Brain", class: "logo-resize1") %>
            <h1><strong>Machine Learning</strong> At <span>Berkeley</span></h1>
            <p class='lead'>Building and fostering a vibrant machine learning community.</p>
            <a href="\about" class='btn btn-outline-primary btn-lg'>About Us &rarr;</a>
          </div>
        </div>
      </div>
    </div>

</div>
</section>

<section class="features">
  <!-- <h2 class='h1'><%= app_name %></h2> -->
  <h1>Connect with ML@B</h1>
  <p class="lead">We provide educational and computational resources to undergraduate and graduate students.</p>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <section>
          <i class='fa fa-calendar-check-o'></i>
          <h4>Events</h4>
          <p>We organize events centered around Machine Learning and Data Science that are open to all!</p>
          <%= link_to "Public Calendar >", root_path %>
        </section>
      </div>
      <div class="col-xs-12 col-md-4">
        <section>
          <i class='fa fa-users'></i>
          <h4>Teams</h4>
          <p>We work with companies on challenging problems. We work on internal research projects.</p>
          <%= link_to "Portfolio >", root_path %>
        </section>
      </div>
      <div class="col-xs-12 col-md-4">
        <section>
          <i class='fa fa-rss'></i>
          <h4>Blog</h4>
          <p>Stay informed, read our tutorials, and Learn from our blog.</p>
          <%= link_to "Blog >", root_path %>
        </section>
      </div>
    </div>
  </div>
</section>
