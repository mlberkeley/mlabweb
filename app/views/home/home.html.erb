<section>
  <div id="m-team" class="text-center">
    <div class="overlay">
        <div class="container">
            <h1 style="margin-bottom: 50px"><strong>Our</strong> Executive <strong>Team</strong></h1>

            <div class="owl-carousel">

              <div>
                <% if @president %>
                <div class="thumbnail">
                  <%= link_to(picture_of(@president), @president) %>
                  <div class="caption">
                    <h3><%= @president.full_name %></h3>
                    <p><%= @president.position %></p>
                  </div>
                </div>
                <% end %>
              </div>
              <% @execs.each do |exec| %>
                <div>
                  <div class="thumbnail">
                    <%= link_to(picture_of(exec), exec) %>
                    <div class="caption">
                      <h3><%= exec.full_name %></h3>
                      <p><%= exec.position %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <p class="ocf-disclaimer">
              We are a student group acting independently of the University of California. We take full responsibility for our organization and this web site.
            </p>

        </div>
    </div>
</div>
</section>
