<% provide(:title, 'Initialize Project') %>

<header class="secondary_header">
    <div class="page_title">
      <%= content_tag(:h1, 'New Project') %>
    </div>
</header>

<div class="row">
  <div class="space"></div>
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(@project, url: newproject_path, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :tag %>
      <%= f.text_field :tag, class: 'form-control', placeholder: "Industry / Research" %>

      <%= f.label :current, class: "checkbox inline" do %>
        <%= f.check_box :current %>
        <span>Current Project?</span>
      <% end %>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: "(may be left blank for later edit)", rows: 20 %>
      </div>

      <span class="picture">
        <%= f.label :picture, "Project Picture" %><br>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        <%= f.label :pdf, "PDF File" %>
        <%= f.file_field :pdf %>
      </span>

      <%= f.submit "Initialize", class: "btn btn-mlab" %>
    <% end %>

    <script type="text/javascript">
      $('#project_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
          alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
      });
    </script>

  </div>
</div>
