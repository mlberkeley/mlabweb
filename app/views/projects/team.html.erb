<% @title = "Team Members" %>

<div class="container-fluid">
  <div class="row" style="margin-bottom:5em">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= form_for(@project, html: { class: 'form-horizontal' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.form_group :name do |f| %>
          <%= f.label :name, class: 'control-label' %>
          <div class="controls">
            <%= f.text_field :name %>
            <%= f.error_messages %>
          </div>
          <% end %>

          <div>
            <% Member.all.each do |member| %>
            <div>
              <%= check_box_tag "project[member_ids][]", member.id, f.object.members.include?(member) %>
              <%= member.last_first_name %>
            </div>
            <% end %>
          </div>


        </div>

        <div class="form-actions col-md-offset-4 col-md-8">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to "Cancel", projects_path, class: 'btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
