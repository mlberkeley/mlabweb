<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <!-- <h3>Industry</h3> -->
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Industry</th>
              </tr>
            </thead>
            <tbody>
              <% @industry.each do |project| %>
              <tr>
                                <td class="actions"><%= project.name %>
                  <%= link_to fa_icon_tag("eye"), project, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_project_path(project), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("users"), members_project_path(project.id), rel: 'tooltip', title: 'Members' %>
                  <%= link_to fa_icon_tag("trash-o"), project, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @industry.length == 0 %>
              <tr><td colspan=42 class='text-center'>No projects.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <!-- <h3>Research</h3> -->
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Research</th>
              </tr>
            </thead>
            <tbody>
              <% @research.each do |project| %>
              <tr>
                                <td class="actions"><%= project.name %>
                  <%= link_to fa_icon_tag("eye"), project, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_project_path(project), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("users"), members_project_path(project.id), rel: 'tooltip', title: 'Members' %>
                  <%= link_to fa_icon_tag("trash-o"), project, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @research.length == 0 %>
              <tr><td colspan=42 class='text-center'>No projects.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->
    </div>
  </div>
</div>
