<% @title = "Listing projects" %>

<% content_for :navbar do %>
  <div class="snav">
    <ul class="snav-links">
      <li>
        <%= link_to new_project_path do %>
          <%= fa_icon_tag "plus" %> Add Project
        <% end %>
      </li>
    </ul>
  </div>
<% end %>

