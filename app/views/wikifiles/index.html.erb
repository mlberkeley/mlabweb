<% @title = "Member Documents" %>

<% content_for :navbar do %>
  <div class="snav">
    <ul class="snav-links">
      <li>
        <%= link_to new_wikifile_path do %>
          <%= fa_icon_tag "plus" %> Upload New File
        <% end %>
      </li>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th>Name</th>
                                <th>Download Link</th>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @wikifiles.each do |wikifile| %>
              <tr>
                                <td><%= wikifile.name %></td>
                                <td><%= link_to "Download File", wikifile.attachment_url, target: '_blank' %></td>
                                <td class="actions">
                  <%= link_to fa_icon_tag("trash-o"), wikifile, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @wikifiles.length == 0 %>
              <tr><td colspan=42 class='text-center'>No wikifiles.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

                </div>
  </div>
</div>
